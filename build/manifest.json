{
    "name": "Signer Client",
    "version": "1.0",
    "description": "Open Panel Signer, to sign pdf files with signatures A3 and A1.",
    "manifest_version": 2,
    "permissions": [
        "nativeMessaging"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background":{
       "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "128": "logo.png"
    },

    "content_scripts": [
        {
            "matches" : ["https://*/*","http://*/*"],
            "js" : ["main.js"]
        }
    ]
}